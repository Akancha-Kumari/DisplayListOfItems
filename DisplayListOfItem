        $(function () {
            $('#listItem li').click(function () {
                var a = document.getElementById('listItem').getElementsByTagName('li');
                for (var i = 0; i < a.length; i++) {
                    a[i].onclick = function () {
                        alert(this.innerHTML);
                    }
                }
            });
        });
